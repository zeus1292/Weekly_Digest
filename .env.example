# Research Lens - Environment Variables
# Copy this file to .env and fill in your values

# Database (SQLite by default, or specify PostgreSQL URL)
# Leave empty to use SQLite: ./research_lens.db
DATABASE_URL=

# Google Gemini API Key (required)
# Get one at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key

# Tavily Search API Key (required for web article search)
# Get one at: https://tavily.com/
TAVILY_API_KEY=your-tavily-api-key

# LangSmith Observability (optional but recommended)
# Enables tracing for all LLM calls in the LangGraph workflow
# Get API key at: https://smith.langchain.com/
# 1. Create account at smith.langchain.com
# 2. Go to Settings > API Keys > Create API Key
# 3. Set LANGCHAIN_TRACING_V2=true and paste your key below
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=research-lens
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Authentication
SESSION_SECRET=your-session-secret-key-here
JWT_SECRET=your-jwt-secret-key-here
SESSION_EXPIRY_DAYS=7

# Server Configuration
PORT=5000
DEBUG=true
FRONTEND_URL=http://localhost:5173
