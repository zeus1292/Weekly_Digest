{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "dist/public",
  "functions": {
    "dist/api/**/*.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/health", "destination": "/dist/api/health" },
    { "source": "/api/research", "destination": "/dist/api/research" },
    { "source": "/api", "destination": "/dist/api/index" },
    { "source": "/((?!api|assets|dist).*)", "destination": "/index.html" }
  ]
}
