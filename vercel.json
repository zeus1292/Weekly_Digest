{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "vite build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60,
      "includeFiles": "server/**,shared/**"
    }
  },
  "rewrites": [
    { "source": "/((?!api|assets).*)", "destination": "/index.html" }
  ]
}
